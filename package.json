{
  "name": "dotfiles",
  "version": "1.0.0",
  "description": "Personal dotfiles automation with TypeScript/Bun",
  "type": "module",
  "bin": {
    "dotfiles": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "install:dotfiles": "bun run src/index.ts install",
    "link": "bun run src/index.ts link",
    "unlink": "bun run src/index.ts unlink",
    "status": "bun run src/index.ts status",
    "typecheck": "tsc --noEmit",
    "build": "bun run build:all",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile=dist/dotfiles-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile=dist/dotfiles-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile=dist/dotfiles-linux-x64",
    "build:linux-arm64": "bun build src/index.ts --compile --target=bun-linux-arm64 --outfile=dist/dotfiles-linux-arm64"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.9.2",
    "bun-types": "^1.1.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexalexandrescu/dotfiles.git"
  },
  "author": "Alex Alexandrescu",
  "license": "MIT"
}

          "required": false
        },
        {
          "name": "iterm2",
          "macos": "iterm2",
          "ubuntu": null,
          "description": "Enhanced terminal for macOS",
          "platform_specific": true,
          "cask": true,
          "required": false
        }
      ]
    },
    "optional": {
      "description": "Optional tools (install with --optional flag)",
      "priority": 9,
      "packages": [
        {
          "name": "lazygit",
          "macos": "lazygit",

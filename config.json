        },
        {
          "name": "hyperfine",
          "macos": "hyperfine",
          "ubuntu": "hyperfine",
          "description": "Command-line benchmarking"
        }
      ]
    },
    "gui_applications": {
      "description": "GUI applications (desktop environment required)",
      "priority": 10,
      "condition": "desktop_environment",
      "packages": [
        {
